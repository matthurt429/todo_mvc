<!DOCTYPE html>
<html>
  <head>
    <title>TodoMvc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to image_tag('download.jpeg', height:'51'), root_path %>
      </div>
      <ul class="nav navbar-nav">
        <%= render 'nav_link', text: 'Home', path: root_path %>
        <%= render 'nav_link', text: 'List', path: lists_path if user_signed_in? %>
        <%= render 'nav_link', text: 'New List', path: new_list_path if user_signed_in? %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in?%>
          <%= render 'nav_link', text: "Signed in as #{current_user.firstname}", path:edit_user_registration_path %>
          <%= render 'nav_link', text: "Log out", path: destroy_user_session_path, link_options: {method: :delete} %>
        <% else %>
          <%= render 'nav_link', text:"Log in", path:new_user_session_path%>
          <%= render 'nav_link', text:"Sign up", path:new_user_registration_path %>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>
  </body>
</html>
