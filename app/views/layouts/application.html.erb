<!DOCTYPE html>
<html>
  <head>
    <title>TodoMvc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to image_tag('download.jpeg', height:'51'), root_path %>
      </div>
      <ul class="nav navbar-nav">
        <!-- Lists Dropdown -->
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Blogs<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <%= render 'nav_link', text: 'New Blog', path: new_article_path %>
            <%= render 'nav_link', text: 'Blogs', path: articles_path %>
          </ul>
        </li>
        <!-- Lists Dropdown -->
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lists <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <%= render 'nav_link', text: 'New List', path: new_list_path %>
            <%= render 'nav_link', text: 'My List', path: lists_path %>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in?%>
          <%= render 'nav_link', text: 'Admin', path:admin_path if current_user.is_admin %>
          <%= render 'nav_link', text: "Signed in as #{current_user.firstname}", path:profile_path %>
          <%= render 'nav_link', text: "Log out", path: destroy_user_session_path, link_options: {method: :delete} %>
        <% else %>
          <%= render 'nav_link', text:"Log in", path:new_user_session_path%>
          <%= render 'nav_link', text:"Sign up", path:new_user_registration_path %>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>
  </body>
</html>
